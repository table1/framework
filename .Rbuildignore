# R specific (but keep inst/templates/*.Rproj)
^[^/]*\.Rproj$
^\.Rproj\.user$
^\.Rhistory$
^\.RData$
^\.Ruserdata$

# Build artifacts
^.*\.tar\.gz$
^.*\.zip$
^.*\.tgz$
^.*\.Rcheck$

# Development files
^\.git$
^\.github$
^\.gitignore$
^\.editorconfig$
^\.lintr$
^\.styler\.R$
^\.env$
^\.env\.example$

# Build tools and project files
^Makefile$
^package\.json$
^build\.sh$
^\.vscode$
^\.idea$

# Documentation (keep LICENSE, ignore docs dir)
^docs$
^CLAUDE\.md$
^api\.md$
^MIGRATION_PLAN\.md$
^LICENSE\.md$

# macOS
^\.DS_Store$
^\.DS_Store?$
^\._*
^\.Spotlight-V100$
^\.Trashes$

# Windows
^ehthumbs\.db$
^Thumbs\.db$

# Tests
^tests$
^tests/$

# Other
^\.cursorignore$
^\.Rbuildignore\.bak$