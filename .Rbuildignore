# R specific (but keep inst/templates/*.Rproj)
^[^/]*\.Rproj$
^\.Rproj\.user$
^\.Rhistory$
^\.RData$
^\.Ruserdata$

# Build artifacts
^.*\.tar\.gz$
^.*\.zip$
^.*\.tgz$
^.*\.Rcheck$

# Development files
^\.git$
^\.github$
^\.gitignore$
^\.editorconfig$
^\.lintr$
^\.styler\.R$
^\.env$
^\.env\.example$

# Build tools and project files
^Makefile$
^package\.json$
^build\.sh$
^\.vscode$
^\.idea$

# Documentation (keep LICENSE, ignore docs dir)
^docs$
^CLAUDE\.md$
^api\.md$
^MIGRATION_PLAN\.md$
^LICENSE\.md$
^cran-comments\.md$

# macOS
^\.DS_Store$
^\.DS_Store?$
^\._*
^\.Spotlight-V100$
^\.Trashes$

# Windows
^ehthumbs\.db$
^Thumbs\.db$

# Test infrastructure (keep test files, exclude docker)
^tests/docker$
^tests/testthat/fixtures$

# Other
^\.cursorignore$
^\.Rbuildignore\.bak$
^readme-parts$

# GUI development (not needed in package)
^gui-dev$

# Other non-standard files
^content$
^docker-compose\.test\.yml$
^docs\.db$
^resources$
^scripts$
^settings\.json$

# Hidden files in inst that shouldn't be distributed
inst/\.RData$
inst/templates/\.editorconfig$
inst/templates/\.lintr\.default$
