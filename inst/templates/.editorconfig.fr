# top-most EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# R source files
[*.R]
indent_style = space
indent_size = 2
max_line_length = 120

# R Markdown
[*.Rmd]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Don't trim inside code blocks
max_line_length = 80

# YAML config files (e.g., .lintr)
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# JSON (e.g., package metadata)
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true